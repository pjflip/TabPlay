@model List<TabPlay.Models.Section>

<div class="row mt-5">
    <div class="col-12 text-center">
        <h3>
            Select Section:
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        @foreach (var section in Model)
        {
            <button id="s@(section.SectionID)" class="btn btn-primary btn-lg m-1" style="width:3em" ontouchstart="selectSection('@(section.SectionID)')">
                @(section.SectionLetter)
            </button>
        }
    </div>
</div>

<script>
    var section = "";
    var isSubmitted = false;

    function selectSection(n) {
        if (section != "") {
            document.getElementById("s" + section).className = "btn btn-primary btn-lg m-1";
        }
        document.getElementById("s" + n).className = "btn btn-warning btn-lg m-1";
        section = n;
        document.getElementById("OKButton").className = "btn btn-success mr-0 ml-2 float-right";
    }

    function OKButtonClick() {
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("Index", "TableNumber")?sectionID=' + section;
        }
    }
</script>
